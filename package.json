{
  "name": "@borderlesslabs/ui",
  "version": "0.2.2",
  "description": "UI components based on React Free Style and Atoms",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist.es2015/index.js",
  "jsnext:main": "dist.es2015/index.js",
  "sideEffects": false,
  "files": [
    "dist/"
  ],
  "scripts": {
    "prettier": "prettier --write",
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "format": "npm run prettier -- \"{,src/**/,.storybook/**/}*.{json,js,jsx,ts,tsx,md,yml,yaml}\"",
    "build": "rimraf dist/ dist.es2015/ && tsc && tsc -P tsconfig.es2015.json",
    "specs": "jest --coverage",
    "test": "npm run -s lint && npm run -s build && npm run -s specs",
    "prepare": "npm run build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy": "gh-pages -d storybook-static",
    "postpublish": "npm run build-storybook && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/BorderlessLabs/ui.git"
  },
  "keywords": [
    "ui",
    "react",
    "components"
  ],
  "author": "Blake Embrey <hello@blakeembrey.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BorderlessLabs/ui/issues"
  },
  "homepage": "https://github.com/BorderlessLabs/ui",
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,js,jsx,ts,tsx,md,yml,yaml}": "npm run prettier"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-contexts": "^5.3.17",
    "@storybook/addon-docs": "^5.3.17",
    "@storybook/addon-info": "^5.3.17",
    "@storybook/addon-knobs": "^5.3.17",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addon-viewport": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/react": "^5.3.17",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.7.5",
    "@types/react-dom": "^16.0.9",
    "babel-loader": "^8.0.6",
    "gh-pages": "^2.1.1",
    "husky": "^4.0.1",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "react": "^16.8.6",
    "react-docgen-typescript-loader": "^3.2.1",
    "react-dom": "^16.8.6",
    "react-free-style": "^10.2.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.3.1",
    "ts-loader": "^7.0.1",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.16.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-free-style": "^10.2.1"
  },
  "dependencies": {
    "@borderlesslabs/atoms": "^0.2.4",
    "uniqueid": "^1.0.0"
  }
}
