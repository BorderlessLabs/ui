{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest"]
  }
}
